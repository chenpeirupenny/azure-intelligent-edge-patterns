{
  "$schema-template": "2.0.0",
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "runtime": {
          "type": "docker",
          "settings": {
            "minDockerVersion": "v1.25",
            "loggingOptions": "",
            "registryCredentials": {
              "intelcustomvision": {
                "username": "$CONTAINER_REGISTRY_USERNAME",
                "password": "$CONTAINER_REGISTRY_PASSWORD",
                "address": "$CONTAINER_REGISTRY_NAME"
              }
            }
          }
        },
        "systemModules": {
          "edgeAgent": {
            "type": "docker",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:1.0",
              "createOptions": {}
            }
          },
          "edgeHub": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.0",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "5671/tcp": [{
                      "HostPort": "5671"
                    }],
                    "8883/tcp": [{
                      "HostPort": "8883"
                    }],
                    "443/tcp": [{
                      "HostPort": "443"
                    }]
                  }
                }
              }
            }
          }
        },
        "modules": {
          "WebModule": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "env": {
              "TRAINING_KEY": {
                "value": "<CUSTOM-VISION-TRAINING-KEY>"
              },
              "ENDPOINT": {
                "value": "<CUSTOM-VISION-ENDPOINT>"
              },
              "DBNAME": {
                "value": "vision_on_edge"
              },
              "DBHOST": {
                "value": "172.18.0.1"
              },
              "DBUSER": {
                "value": "vision_on_edge"
              },
              "DBPASS": {
                "value": "vision_on_edge"
              }
            },
            "settings": {
              "image": "${MODULES.WebModule}",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "8000/tcp": [{
                      "HostPort": "8080"
                    }]
                  }
                }
              }
            }
          },
          "WebDBModule": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "env": {
              "POSTGRES_PASSWORD": {
                "value": "vision_on_edge"
              },
              "POSTGRES_USER": {
                "value": "vision_on_edge"
              },
              "POSTGRES_DB": {
                "value": "vision_on_edge"
              }
            },
            "settings": {
              "image": "${MODULES.WebDBModule}",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "5432/tcp": [{
                      "HostPort": "5432"
                    }]
                  }
                }
              }
            }
          },
          "InferenceModule": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.InferenceModule.cpuamd64}",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "5000/tcp": [{
                      "HostPort": "5000"
                    }],
                    "5558/tcp": [{
                      "HostPort": "5558"
                    }]
                  },
                  "IpcMode": "container:lvaEdge",
                  "runtime": "runc"
                }
              }
            }
          },
          "lvaEdge": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/media/live-video-analytics:1",
              "createOptions": {
                "HostConfig": {
                  "LogConfig": {
                    "Type": "",
                    "Config": {
                      "max-size": "10m",
                      "max-file": "10"
                    }
                  },
                  "Binds": ["/home/willy/media/:/var/media/", "/home/willy/media/azuremediaservices:/var/lib/azuremediaservices/"],
                  "IpcMode": "shareable"
                }
              }
            }
          },

          "rtspsim": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/lva-utilities/rtspsim-live555:1.2",
              "createOptions": {
                "HostConfig": {
                  "Binds": ["/home/willy/media/input:/live/mediaServer/media"]
                }
              }
            }
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "routes": {
          "metrics": "FROM /messages/modules/InferenceModule/outputs/metrics INTO $upstream"
        },
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 7200
        }
      }
    },
    "WebModule": {
      "properties.desired": {}
    },
    "VisionSampleModule": {
      "properties.desired": {}
    },
    "lvaEdge": {
      "properties.desired": {
        "applicationDataDirectory": "/var/media",
        "azureMediaServicesArmId": "/subscriptions/091725d9-aeba-4638-8faf-d0e81a03a93d/resourcegroups/ronpai_rg_Linux_westus2/providers/microsoft.media/mediaservices/ronmedia",
        "aadTenantId": "2cf4248e-4836-4202-b796-9a1589ff4613",
        "aadServicePrincipalAppId": "80cb4c37-88c2-4b41-a1cc-2b04a3b8b203",
        "aadServicePrincipalSecret": "s.TUWseDmf2FzU_n33m.keRN~oV8Q4J0kO",
        "aadEndpoint": "https://login.microsoftonline.com",
        "aadResourceId": "https://management.core.windows.net/",
        "armEndpoint": "https://management.azure.com/",
        "diagnosticsEventsOutputName": "AmsDiagnostics",
        "operationalEventsOutputName": "AmsOperational",
        "logLevel": "Information",
        "logCategories": "Application,Events",
        "allowUnsecuredEndpoints": true,
        "telemetryOptOut": false
      }
    }
  }
}